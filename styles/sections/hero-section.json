{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "title": "{{hero_section_style_title}}",
    "styles": {
        "blocks": {
            "core/cover": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--80)",
                        "bottom": "var(--wp--preset--spacing--80)"
                    }
                },
                "elements": {
                    "heading": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--x-large)",
                            "fontWeight": "700",
                            "lineHeight": "1.1"
                        }
                    }
                }
            }
        }
    }
}